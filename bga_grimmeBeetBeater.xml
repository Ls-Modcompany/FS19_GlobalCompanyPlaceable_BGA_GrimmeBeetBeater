						</rotationNodes>
					</operatingParts>
					<productSale title="GlobalCompanyPlaceable_BGA_GrimmeBeetBeater_productSale_bga">
						<incomePerHour newFarmer="200" farmManager="150" startFromScratch="100" />
					</productSale>
				</productLine>
				<productLine autoLineStart="true" outputPerHour="10000" title="GlobalCompanyPlaceable_BGA_GrimmeBeetBeater_productLine_seed" showInGUI="true">
					<inputs>
						<inputProduct name="IP_SILAGE" percent="100" />
					</inputs>					
					<outputs>
						<outputProduct name="OP_DIGESTATE" percent="100" />
					</outputs>					
					<playerTrigger playerTriggerNode="PlayerTriggerLine2" showPopupUI="true"/>					
