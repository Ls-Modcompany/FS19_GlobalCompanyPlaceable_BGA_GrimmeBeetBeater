        <rotation>0</rotation>
        <brand>GCPLACEABLE</brand>
        <specs>
            <capacity></capacity>
            <fillTypes>sugarBeet silage digestate</fillTypes>
        </specs>
		<functions>
			<function>$l10n_function_bga_grimmeBeetBeater</function>
        </functions>
        <species>placeable</species>
        <category>globalCompanyPlaceable</category>
